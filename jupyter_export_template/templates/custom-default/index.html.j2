<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ nb.metadata.get('title', 'Notebook Export') }}</title>
    <style>
        /* Custom Default Template Styles */
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            line-height: 1.6;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            color: #333333;
        }

        .notebook-header {
            border-bottom: 2px solid #e1e5e9;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .notebook-title {
            font-size: 2.5em;
            font-weight: 300;
            margin: 0;
            color: #2c3e50;
        }

        .notebook-metadata {
            margin-top: 10px;
            color: #666;
            font-size: 0.9em;
        }

        .cell {
            margin-bottom: 30px;
            border-left: 4px solid transparent;
            padding-left: 20px;
        }

        .cell.markdown {
            border-left-color: #3498db;
        }

        .cell.code {
            border-left-color: #e74c3c;
        }

        .cell-input {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 4px;
            padding: 15px;
            margin-bottom: 10px;
            font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
            font-size: 14px;
            overflow-x: auto;
        }

        .cell-output {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 4px;
            padding: 15px;
            margin-top: 10px;
        }

        .cell-output pre {
            margin: 0;
            white-space: pre-wrap;
            word-wrap: break-word;
        }

        .cell-output img {
            max-width: 100%;
            height: auto;
        }

        .cell-output table {
            border-collapse: collapse;
            width: 100%;
            margin: 10px 0;
        }

        .cell-output th, .cell-output td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: left;
        }

        .cell-output th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .prompt {
            color: #6c757d;
            font-weight: bold;
            margin-right: 10px;
        }

        .highlight {
            background-color: #fff3cd;
            padding: 2px 4px;
            border-radius: 3px;
        }

        /* Responsive design */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }
            .notebook-title {
                font-size: 2em;
            }
        }
    </style>
</head>
<body>
    <div class="notebook-header">
        <h1 class="notebook-title">{{ nb.metadata.get('title', 'Jupyter Notebook') }}</h1>
        <div class="notebook-metadata">
            {% if nb.metadata.get('authors') %}
                <p><strong>Authors:</strong> {{ nb.metadata.authors | join(', ') }}</p>
            {% endif %}
            {% if nb.metadata.get('date') %}
                <p><strong>Date:</strong> {{ nb.metadata.date }}</p>
            {% endif %}
        </div>
    </div>

    <div class="notebook-content">
        {% for cell in nb.cells %}
            {% if cell.cell_type == 'markdown' %}
                <div class="cell markdown">
                    {{ cell.source | markdown }}
                </div>
            {% elif cell.cell_type == 'code' %}
                <div class="cell code">
                    {% if cell.source.strip() %}
                        <div class="cell-input">
                            <span class="prompt">In [{{ cell.execution_count or ' ' }}]:</span>
                            <pre><code>{{ cell.source }}</code></pre>
                        </div>
                    {% endif %}

                    {% if cell.outputs %}
                        {% for output in cell.outputs %}
                            <div class="cell-output">
                                <span class="prompt">Out[{{ cell.execution_count or ' ' }}]:</span>
                                {{ output | render_output }}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            {% elif cell.cell_type == 'raw' %}
                <div class="cell raw">
                    <pre>{{ cell.source }}</pre>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</body>
</html>
